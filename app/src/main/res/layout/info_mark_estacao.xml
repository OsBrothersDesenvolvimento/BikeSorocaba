<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <RelativeLayout
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="5dp">

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Id - Nome da Estação"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBikesDisponiveis"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/tvNome"
            android:layout_margin="3dp"
            android:text="@string/bikes_disponiveis" />

        <TextView
            android:id="@+id/tvBaiasDisponiveis"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:layout_below="@+id/tvBikesDisponiveis"
            android:text="@string/baias_disponiveis" />

    </RelativeLayout>
</RelativeLayout>