<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:id="@+id/rlEstacao">

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Id - Nome da Estação"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvBikesDisponiveis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNome"
            android:layout_alignParentLeft="true"
            android:layout_margin="3dp"
            android:text="@string/bikes_disponiveis" />

        <TextView
            android:id="@+id/tvBaiasDisponiveis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNome"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tvBikesDisponiveis"
            android:layout_margin="3dp"
            android:gravity="end"
            android:text="@string/baias_disponiveis" />



</RelativeLayout>